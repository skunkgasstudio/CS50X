// Problem Set 1

//Ask for height of mario pyramid
//Go back one step if user inputs a value for height that is less than 1 or greater than 8 </li>
//Use the value from step one to print i hashes and then begin a newline

#include <stdio.h>
#include <cs50.h>

int main(void)
{
     //Get height input
    do
    {
        height = get_int("Height: ");
    }
    while (height < 0 || height > 23);
    //Rows
    for (int i = 1; i <= height; i++)
    {
        //Spacing
        for (spaces = (height - (i)); spaces > 0; spaces--)
        {
            printf(" ");
        }
        // Columns of hashes
        for (hashes = 1; hashes <= i; hashes++)
        {
            printf("#");
        }
        printf("  ");
        for (hashesSecond = 1; hashesSecond <= i; hashesSecond++)
        {
            printf("#");
        }
        printf("\n");
    }
    return 0;

}
